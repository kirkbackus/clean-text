{
  "name": "clean-text",
  "version": "1.0.3",
  "description": "A standalone Electron app to clean hidden UTF-8 characters from text",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development && electron .",
    "start": "electron .",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --dir",
    "dist:mac": "npm run build && electron-builder --mac --dir",
    "dist:linux": "npm run build && electron-builder --linux --dir",
    "release": "npm run build && electron-builder --publish=always",
    "clean": "rimraf dist build"
  },
  "keywords": [
    "electron",
    "text-cleaner",
    "utf-8",
    "clipboard"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.cleantext.app",
    "productName": "Clean Text",
    "directories": {
      "output": "build"
    },
    "forceCodeSigning": false,
    "files": [
      "dist/**/*",
      "!dist/**/*.map",
      "!node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Clean Text",
      "verifyUpdateCodeSignature": false,
      "sign": false,
      "signAndEditExecutable": false,
      "signDlls": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Clean Text"
    },
    "publish": {
      "provider": "github",
      "owner": "kirkbackus",
      "repo": "clean-text"
    }
  }
}
