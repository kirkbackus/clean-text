{
  "name": "clean-text",
  "version": "1.0.0",
  "description": "A standalone Electron app to clean hidden UTF-8 characters from text",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development && electron .",
    "start": "electron .",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "clean": "rimraf dist build"
  },
  "keywords": ["electron", "text-cleaner", "utf-8", "clipboard"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.cleantext.app",
    "productName": "Clean Text",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
